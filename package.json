{
  "name": "oktaman",
  "version": "0.1.10",
  "description": "Local AI assistant that runs in your browser",
  "bin": {
    "oktaman": "./bin/oktaman.js"
  },
  "workspaces": [
    "apps/*",
    "packages/server",
    "packages/ui",
    "packages/shared"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "setup": "npm run setup -w packages/server",
    "start": "node bin/oktaman.js",
    "desktop:dev": "npm run build && concurrently -k \"npm run dev -w packages/server\" \"npm run dev -w packages/ui\" \"npx wait-on tcp:4321 tcp:4200 && npm run dev -w apps/desktop\"",
    "desktop:dist": "npm run build && npm run dist -w apps/desktop"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.2.5",
    "turbo": "^2.2.3",
    "typescript": "^5.3.3",
    "wait-on": "^8.0.3"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "open": "^11.0.0"
  }
}
